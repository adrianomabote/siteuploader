modules = ["nodejs-20"]

[nix]
channel = "stable-25_05"
packages = ["unzip"]

[[ports]]
localPort = 5000
externalPort = 80

[workflows]

[[workflows.workflow]]
name = "Start application"
mode = "sequential"
author = 48644742

[[workflows.workflow.tasks]]
task = "shell.exec"
args = "npm run dev"

[deployment]
build = ["sh", "-c", "rm -rf dist node_modules/.vite && npm install && npm run build"]
run = ["sh", "-c", "npm start"]
deploymentTarget = "cloudrun"
